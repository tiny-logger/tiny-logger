{
    "name": "serhii/tiny-logger",
    "description": "Light weight composer package for file logging in PHP7.",
    "homepage": "https://github.com/tiny-logger/tiny-logger",
    "keywords": ["logger", "library"],
    "type": "library",
    "require": {
        "php": "^7.2|^8.0",
        "ext-json": "*",
        "ext-curl": "*",
        "curl/curl": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "symfony/var-dumper": "^4.2",
        "phpstan/phpstan": "^1.10.57",
        "squizlabs/php_codesniffer": "^3.7.2",
        "sandfoxme/private-access": "^1.3.0",
        "laravel/pint": "1.18.1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "SerhiiCho",
            "email": "serhiicho@protonmail.com",
            "homepage": "https://serhii.io",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Serhii\\TinyLogger\\": "src"
        },
        "files": [
            "logger.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Serhii\\Tests\\": "tests"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "stan": "phpstan analyse",
        "cs": "phpcs src logger.php --colors -p",
        "test": "phpunit --colors",
        "pint": "pint --test",
        "check": [
            "@stan",
            "@cs",
            "@test",
            "@pint"
        ]
    }
}
